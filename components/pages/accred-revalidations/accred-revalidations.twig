{% set isSpecial = true %}
{% extends "@templates/base/base.twig" %}
{% block header %}
{% include '@organisms/header/header-light.twig' with { site_title: 'Accred', header: header_accred } %}
{% endblock %}
{% block breadcrumb %}
<div class="breadcrumb-container">
  {% include '@molecules/breadcrumb/breadcrumb.twig' %}
</div>
{% endblock %}
{% block content %}
<div class="container-full py-4">
  <div class="container">
    <div class="row mb-4">
      <div class="col-md-12">
        <h1>Revalidations</h1>
        <h4>Accréditations à revalider</h4>
      </div>
    </div>
  </div>
  <div id="checkbox-actions-wrap" class="container-full sticky-div">
    <div class="container">
      <div class="pb-2 d-md-flex justify-content-between">
        <div class="custom-control custom-checkbox mt-3">
          <input type="checkbox" class="custom-control-input select-all" id="select-all">
          <label class="custom-control-label w-100 mr-3" for="select-all"><strong>Tout sélectionner</strong></label>
        </div>
        <div id="checkbox-actions" class="d-none mt-2">
          {# <span class="text-muted small">Prolonger de</span> <br /> #}
          <div class="dropdown">
            <button class="btn btn-primary dropdown-toggle" type="button" id="extendDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              Prolonger
            </button>
            <div class="dropdown-menu" aria-labelledby="extendDropdown">
              <a class="dropdown-item" href="#">1 mois</a>
              <a class="dropdown-item" href="#">2 mois</a>
              <a class="dropdown-item" href="#">3 mois</a>
              <a class="dropdown-item" href="#">6 mois</a>
              <a class="dropdown-item" href="#">12 mois</a>
            </div>
            <button class="btn btn-secondary">{% include "@atoms/icon/icon.twig" with { icon: 'icon-close' } %} Supprimer la revalidation</button>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="container sticky-content">
    <div class="mb-4">
      <div class="row">
        <div class="col-md-12 border px-0">
          <div class="py-3 px-3 bg-gray-100">
            <div class="custom-control custom-checkbox">
              <input type="checkbox" class="custom-control-input group-select-all" id="group-1">
              <label class="custom-control-label w-100 mr-3" for="group-1"><h5 class="mb-0">ANCHP — Algorithme numériques et calcul haute performance – Chaire CADMOS</h5></label>
            </div>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12 py-3 border border-top-0">
          <div class="custom-control custom-checkbox">
            <input type="checkbox" class="custom-control-input group-checkbox" id="custom-check-1" group="group-1">
            <label class="custom-control-label w-100" for="custom-check-1">Catherine Risse (2071238)<span class="float-right">Echéance: 31/05/2018</span></label>
          </div>
          <hr>
          <div class="custom-control custom-checkbox">
            <input type="checkbox" class="custom-control-input group-checkbox" id="custom-check-2" group="group-1">
            <label class="custom-control-label w-100" for="custom-check-2">Catherine Risse (2071238)<span class="float-right">Echéance: 31/05/2018</span></label>
          </div>
        </div>
      </div>
    </div>
    <div class="mb-4">
      <div class="row">
        <div class="col-md-12 border px-0">
          <div class="py-3 px-4 bg-gray-100">
            <div class="custom-control custom-checkbox">
              <input type="checkbox" class="custom-control-input group-select-all" id="group-2">
              <label class="custom-control-label w-100 mr-3" for="group-2"><h5 class="mb-0">ANCHP — Algorithme numériques et calcul haute performance – Chaire CADMOS</h5></label>
            </div>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12 py-3 border border-top-0">
          <div class="custom-control custom-checkbox">
            <input type="checkbox" class="custom-control-input group-checkbox" id="custom-check-3" group="group-2">
            <label class="custom-control-label w-100" for="custom-check-3">Catherine Risse (2071238)<span class="float-right">Echéance: 31/05/2018</span></label>
          </div>
          <hr>
          <div class="custom-control custom-checkbox">
            <input type="checkbox" class="custom-control-input group-checkbox" id="custom-check-4" group="group-2">
            <label class="custom-control-label w-100" for="custom-check-4">Catherine Risse (2071238)<span class="float-right">Echéance: 31/05/2018</span></label>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
</div>
{% endblock %}
